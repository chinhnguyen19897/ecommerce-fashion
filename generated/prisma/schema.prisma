generator client {
  provider      = "prisma-client-js"
  output        = "../generated/prisma"
  moduleFormat  = "esm"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id           Int     @id @default(autoincrement())
  email        String  @unique
  isValidEmail Int
  otpCode      String
  name         String?
  password     String
  role         String?
}
